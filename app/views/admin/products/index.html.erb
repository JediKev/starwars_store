<p id="notice"><%= notice %></p>

<h1>All Products<p id="new"><%= link_to '<i class="fa fa-plus fa-fw"></i>Add Product'.html_safe, new_admin_product_path %></p></h1>

<div class="container-fluid">
  <div class="panel panel-default">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Brand</th>
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |admin_product| %>
            <tr>
              <td><%= image_tag admin_product.avatar.url (:thumb) %></td>
              <td class="vert-align"><%= admin_product.name %></td>
              <td class="vert-align"><%= number_to_currency admin_product.price %></td>
              <td class="vert-align"><%= admin_product.quantity %></td>
              <td class="vert-align"><%= admin_product.description %></td>
              <td class="vert-align"><%= admin_product.brand.name %></td>
              <td class="vert-align"><%= admin_product.category.name %></td>
              <td class="vert-align text-center">
                <ul>
                  <li><%= link_to '<i class="fa fa-file-text-o"></i>'.html_safe, admin_product_path(admin_product) %></li>
                  <li><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_admin_product_path(admin_product) %></li>
                  <li><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, admin_product_path(admin_product), method: :delete, data: { confirm: 'Are you sure?' } %></li>
                </ul>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
