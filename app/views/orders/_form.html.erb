<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="field form-group">
    <%= f.input :name, class: "form-control", placeholder: "Kevin Thorne" %>
    <%= f.input :address, class: "form-contol", placeholder: "123 Apple Lane \nSunnyville, California 71111" %>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, {prompt: "Select Payment Type"}, {class: "form-contol"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Place Order", class: "btn btn-success" %>
  </div>
<% end %>
